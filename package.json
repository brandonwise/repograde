{
  "name": "repograde",
  "version": "1.0.0",
  "description": "CLI that audits repositories for best practices and gives them a letter grade (A-F) with actionable recommendations",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "repograde": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "node --test 'tests/*.test.js'",
    "lint": "oxlint src/ tests/",
    "format": "oxfmt src/ tests/ --write",
    "check": "npm run lint && npm run test"
  },
  "keywords": [
    "repository",
    "quality",
    "audit",
    "best-practices",
    "readme",
    "license",
    "ci-cd",
    "linting",
    "grade",
    "cli"
  ],
  "author": "Brandon Wise",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brandonwise/repograde.git"
  },
  "homepage": "https://github.com/brandonwise/repograde#readme",
  "bugs": {
    "url": "https://github.com/brandonwise/repograde/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src"
  ]
}
